@model EditBookViewModel

@{
    Layout = "_Books";
}

<form method = "post" class="form-inline" action="/books/edit">
    <fieldset>
        <h2>Edit a book</h2>
        <div class="form-group">
            <input type="hidden" name="id" value="@Model.Book.id"/>
            <label for="title">Title</label><br/>
            <input class="form-control mx-2" type="text" id="title" name="title" value="@Model.Book.Title"/><br/>
            <label for="year">Year</label><br/>
            <input class="form-control mx-2" type="text" id="year" name="year" value="@Model.Book.Year"/><br/>
            <label for="title">Author</label><br/>
            <input class="form-control mx-2" type="text" id="author" name="author" value="@Model.Book.Author"/><br/>
            <label for="genre">Genre</label><br/>
            <input class="form-control mx-2" type="text" id="genre" name="genre" value="@Model.Book.Genre"/><br/>
        </div>
        <input class="btn btn-secondary" type="submit"/>
    </fieldset>
</form>